<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="8dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginBottom="10dp"
    android:background="#eeeded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ededed">

        <TextView
            android:text="User's Name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/nameOfUserItemCardView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:typeface="sans"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="38dp"
            android:textAlignment="center"
            android:text="foodie_level"
            android:typeface="monospace"
            android:layout_height="20dp"
            android:id="@+id/foodieLevelItemCardView" />

        <TextView
            android:id="@+id/reviewItemCardView"
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Review"
            android:textAlignment="center"
            android:background="#e8fcff"
            android:textColor="@color/wallet_dim_foreground_inverse_holo_dark"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="80dp"
            android:typeface="serif" />

        <TextView
            android:text="10 days ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/reviewItemCardView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/timeStampItemCardView"
            android:layout_marginRight="10dp"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

